<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="200dp"
    android:orientation="vertical"
    android:id="@+id/cv_dashboard_item"
    app:cardCornerRadius="6dp"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    app:cardUseCompatPadding="true"
    android:focusable="true">

    <View
        android:layout_width="wrap_content"
        android:layout_height="3dp"
        android:background="@color/colorPrimary" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView

                android:id="@+id/tv_dashboard_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="My Dms"
                android:textSize="15dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_dashboard_subheading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="Explore your dms"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="12dp" />


        </LinearLayout>


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/civ_dashboard_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            
            android:layout_alignParentBottom="true"
            android:src="@drawable/ic_person_blue_20dp"
            app:civ_border_color="@color/colorPrimaryDark"
            app:civ_border_width="1dp"
            app:civ_circle_background_color="@color/grey"

            android:layout_alignParentEnd="true" />


    </RelativeLayout>


</androidx.cardview.widget.CardView>