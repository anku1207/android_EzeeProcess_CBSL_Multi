<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="0dp"
    android:id="@+id/cv_task_in_process_item"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_task_in_process_item"
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:src="@drawable/pdf"
            android:id="@+id/iv_task_process_doc_type"
            android:layout_width="24dp"
            android:layout_height="24dp" />

        <TextView
            android:layout_marginLeft="10dp"
            android:textSize="11sp"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/tv_task_process_doc_name"
            android:text="doc name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

       <!--  These are invisible -->
        <TextView
            android:visibility="gone"
            android:layout_margin="3dp"
            android:id="@+id/tv_task_process_doc_type"
            android:text="doc name"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_task_process_doc_path"
            android:drawableRight="@drawable/ic_remove_red_eye_blue_24dp"
            android:text="doc name"
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</androidx.cardview.widget.CardView>