<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/ll_hierarcy_heading"
    android:layout_below="@+id/cv_storage_management_toolbar"
    android:weightSum="1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/diagonal_layout_blue_half_rect_small"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="135dp"
    android:orientation="horizontal"
    android:baselineAligned="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.7"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/iv_metaFolder"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="15dp"
                android:drawingCacheQuality="high"
                android:src="@drawable/ic_round_folder"
                android:contentDescription="TODO" />

            <ImageView
                android:layout_marginRight="2dp"
                android:visibility="invisible"
                android:id="@+id/iv_meta_icon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/iv_metaFolder"
                android:layout_alignEnd="@+id/iv_metaFolder"
                app:srcCompat="@drawable/ic_round_metadata_folder"
                
                android:contentDescription="TODO" />


            <ImageView

                android:layout_marginLeft="7dp"
                android:id="@+id/iv_lock_icon"
                android:visibility="gone"
                android:layout_width="30dp"
                android:layout_alignBottom="@id/iv_metaFolder"
                android:layout_height="30dp"
                android:src="@drawable/lock_circle_yellow_round"
                />


        </RelativeLayout>




    </LinearLayout>

    <LinearLayout
     android:layout_marginLeft="5dp"
     android:layout_weight="0.3"
     android:orientation="vertical"
     android:layout_width="match_parent"
     android:layout_height="wrap_content">

     <TextView
         android:ellipsize="end"
         android:maxLines="1"
         android:drawablePadding="5dp"
         android:drawableLeft="@drawable/ic_folder_open_white_24dp"
         android:textSize="18sp"
         android:id="@+id/tv_dms_heading"
         android:layout_marginLeft="6dp"
         android:layout_marginTop="15dp"
         android:gravity="center"
         android:textColor="@color/white"
         android:textStyle="bold"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content" />

     <LinearLayout
         android:weightSum="1"
         android:orientation="horizontal"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:baselineAligned="false">

         <LinearLayout
             android:orientation="vertical"
             android:layout_weight="0.6"
             android:layout_width="0dp"
             android:layout_height="match_parent">

             <LinearLayout
                 android:layout_marginLeft="5dp"
                 android:layout_marginTop="12dp"
                 android:padding="3dp"
                 android:weightSum="1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal">
                 <TextView

                     android:textStyle="bold"
                     android:textColor="@color/colorPrimaryDark"
                     android:layout_weight="0.7"
                     android:text="@string/total_folder"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content" />
                 <TextView
                     android:textStyle="bold"
                     android:textSize="13sp"
                     android:id="@+id/tv_dms_heading_total_folder"
                     android:textColor="@color/black"
                     android:layout_marginLeft="5dp"
                     android:layout_weight="0.5"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content" />
             </LinearLayout>
             <LinearLayout
                 android:layout_marginLeft="5dp"
                 android:padding="3dp"
                 android:weightSum="1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal">
                 <TextView
                     android:textStyle="bold"
                     android:textColor="@color/colorPrimaryDark"
                     android:layout_weight="0.7"
                     android:text="@string/total_files"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content" />
                 <TextView
                     android:textSize="13sp"
                     android:id="@+id/tv_dms_heading_total_files"
                     android:textColor="@color/black"
                     android:layout_marginLeft="5dp"
                     android:textStyle="bold"
                     android:layout_weight="0.5"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content" />
             </LinearLayout>
             <LinearLayout
                 android:layout_marginLeft="5dp"
                 android:padding="3dp"
                 android:weightSum="1"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:orientation="horizontal">
                 <TextView
                     android:textStyle="bold"
                     android:textColor="@color/colorPrimaryDark"
                     android:layout_weight="0.7"
                     android:text="@string/total_size"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content" />
                 <TextView
                     android:textStyle="bold"
                     android:id="@+id/tv_dms_heading_total_size"
                     android:textColor="@color/black"
                     android:layout_marginLeft="5dp"
                     android:textSize="13sp"
                     android:layout_weight="0.5"
                     android:layout_width="match_parent"
                     android:layout_height="wrap_content" />
             </LinearLayout>
         </LinearLayout>


