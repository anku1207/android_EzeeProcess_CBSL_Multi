<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".ui.activity.workflow.AprrovedRejectTaskActivity">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_task_approve_reject_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <com.google.android.material.appbar.AppBarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:theme="@style/AppTheme.AppBarOverlay">

                <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar_task_approve_reject_tracking"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimary"
                    app:navigationIcon="@drawable/ic_back"
                    app:popupTheme="@style/AppTheme.PopupOverlay"
                    app:title="@string/approved_reject_task"
                    app:titleTextColor="@color/white">

                </androidx.appcompat.widget.Toolbar>
            </com.google.android.material.appbar.AppBarLayout>
 </androidx.cardview.widget.CardView>


    <ProgressBar
        android:layout_gravity="center"
        android:visibility="gone"
        android:id="@+id/pg_task_approve_reject"
        android:indeterminateDrawable="@anim/progressbar_rotate"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:indeterminate="true" />


        <ScrollView
            android:id="@+id/scrollview_main_approve_reject"
            android:visibility="visible"
            android:scrollbars="none"
            android:fillViewport="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <androidx.cardview.widget.CardView
                    android:visibility="gone"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="3dp"
                    app:cardUseCompatPadding="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:padding="10dp"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_aproved_reject_take_photo"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/camera"
                            android:layout_width="52dp"
                            android:layout_height="52dp" />
                        <TextView
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:text="@string/take_a_picture"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />
                        <LinearLayout
                            android:padding="3dp"
                            android:gravity="center"
                            android:weightSum="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <View
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_weight="0.35"
                                android:background="@color/colorPrimaryDark"
                                android:layout_width="0dp"
                                android:layout_height="2dp"/>
                            <TextView
                                android:textStyle="bold"
                                android:textColor="@color/colorPrimaryDark"
                                android:gravity="center"
                                android:text="@string/or"
                                android:layout_weight="0.10"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" />
                            <View
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_weight="0.35"
                                android:background="@color/colorPrimaryDark"
                                android:layout_width="0dp"
                                android:layout_height="2dp"/>
                        </LinearLayout>

                        <ImageView
                            android:id="@+id/iv_aproved_reject_choose_file"
                            android:layout_marginTop="10dp"
                            android:src="@drawable/filemanger"
                            android:layout_width="52dp"
                            android:layout_height="52dp" />

                        <TextView
                            android:padding="5dp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:text="@string/choose_file"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />



                    </LinearLayout>

                </androidx.cardview.widget.CardView>

               <androidx.cardview.widget.CardView
                   android:layout_marginTop="10dp"
                   app:cardUseCompatPadding="true"
                   app:cardCornerRadius="8dp"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content">

                   <LinearLayout
                       android:orientation="vertical"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content">

                       <CheckBox
                           android:id="@+id/checkbox_approve_reject_fileupload"
                           android:buttonTint="@color/white"
                           android:background="@color/colorPrimary"
                           android:padding="10dp"
                           android:textStyle="bold"
                           android:textColor="@color/white"
                           android:text="@string/attach_document_optional"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content" />

                       <LinearLayout
                           android:visibility="gone"
                           android:id="@+id/ll_approve_reject_task_upload_file_upload"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:orientation="vertical">


                           <LinearLayout
                               android:visibility="visible"
                               android:orientation="vertical"
                               android:background="@drawable/diagonal_layout_blue_half_rect"
                               android:gravity="center"
                               android:layout_width="match_parent"
                               android:layout_height="230dp">

                               <ImageView
                                   android:visibility="visible"
                                   android:layout_marginTop="10dp"
                                   android:layout_gravity="center"
                                   android:id="@+id/iv_approve_reject_task_upload_filetype"
                                   android:src="@drawable/file"
                                   android:layout_width="150dp"
                                   android:layout_height="200dp"
                                   android:contentDescription="TODO" />

                               <androidx.cardview.widget.CardView
                                   android:visibility="gone"
                                   android:id="@+id/cv_approve_reject_task_upload_camera"
                                   app:cardBackgroundColor="@color/green_normal"
                                   app:cardElevation="10dp"
                                   android:layout_marginTop="10dp"
                                   android:layout_width="150dp"
                                   android:layout_height="200dp">

                                   <LinearLayout
                                       android:layout_margin="3dp"
                                       android:background="@color/grey_new"
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent">

                                       <ImageView
                                           android:cropToPadding="true"
                                           android:id="@+id/iv_approve_reject_task_upload_camera"
                                           android:visibility="visible"
                                           android:layout_gravity="center"
                                           android:src="@drawable/png"
                                           android:layout_width="150dp"
                                           android:layout_height="200dp"
                                           android:contentDescription="TODO" />
                                   </LinearLayout>



                               </androidx.cardview.widget.CardView>


                           </LinearLayout>

                           <LinearLayout
                               android:visibility="visible"
                               android:layout_marginLeft="10dp"
                               android:layout_marginRight="10dp"
                               android:layout_marginTop="30dp"
                               android:layout_marginBottom="20dp"
                               android:layout_width="match_parent"
                               android:layout_height="wrap_content">

                               <androidx.cardview.widget.CardView
                                   app:cardCornerRadius="5dp"
                                   app:cardUseCompatPadding="true"
                                   android:layout_width="match_parent"
                                   android:layout_height="wrap_content">

                                   <LinearLayout
                                       android:weightSum="1"
                                       android:layout_width="match_parent"
                                       android:layout_height="wrap_content">
                                       <TextView
                                           android:textStyle="bold"
                                           android:hint="No File Selected"
                                           android:gravity="center"
                                           android:textColor="@color/black"
                                           android:textSize="14sp"
                                           android:id="@+id/tv_approve_reject_task_upload_filepath"
                                           android:background="@color/grey"
                                           android:layout_weight="0.7"
                                           android:layout_width="0dp"
                                           android:layout_height="match_parent" />


                                       <Button
                                           android:layout_weight="0.3"
                                           android:id="@+id/btn_approve_reject_task_upload_choose_file"
                                           android:layout_gravity="center"
                                           android:textSize="13sp"
                                           android:textColor="@color/white"
                                           android:text="@string/choose_file"
                                           android:layout_width="0dp"
                                           android:layout_height="wrap_content"
                                           />

                                   </LinearLayout>
                               </androidx.cardview.widget.CardView>

                           </LinearLayout>
                       </LinearLayout>

                   </LinearLayout>




               </androidx.cardview.widget.CardView>



                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="8dp"
                    android:layout_marginTop="10dp"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:background="@color/colorPrimary"
                            android:padding="10dp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:text="@string/task_action"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" />

                        <!--radio buttons-->
                        <LinearLayout
                            android:layout_marginTop="10dp"
                            android:visibility="visible"
                            android:padding="5dp"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">


                            <RadioGroup
                                android:id="@+id/rg_task_action"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <RadioButton
                                    android:visibility="gone"
                                    android:id="@+id/rb_approve_reject_processed"
                                    android:text="@string/processed"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <RadioButton
                                    android:visibility="gone"
                                    android:id="@+id/rb_approve_reject_approved"
                                    android:text="@string/approved"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <RadioButton
                                    android:visibility="gone"
                                    android:id="@+id/rb_approve_reject_rejected"
                                    android:text="@string/rejected"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <RadioButton
                                    android:visibility="gone"
                                    android:id="@+id/rb_approve_reject_aborted"
                                    android:text="@string/aborted"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <RadioButton
                                    android:visibility="gone"
                                    android:id="@+id/rb_approve_reject_complete"
                                    android:text="@string/complete"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <RadioButton
                                    android:visibility="gone"
                                    android:id="@+id/rb_approve_reject_done"
                                    android:text="@string/done"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </RadioGroup>


                        </LinearLayout>


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="8dp"
                    android:visibility="visible"
                    android:id="@+id/cv_approve_reject_task_adduser"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:background="@color/colorPrimary"
                            android:weightSum="1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:visibility="gone">

                            <TextView
                                android:id="@+id/tv_approve_reject_task_add_user"
                                android:layout_weight="0.9"
                                android:padding="10dp"
                                android:textStyle="bold"
                                android:textColor="@color/white"
                                android:text="@string/add_user"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content" />

                            <ImageView
                                android:id="@+id/iv_approve_reject_task_add_user"
                                android:padding="7dp"
                                android:layout_weight="0.1"
                                android:src="@drawable/ic_add_box_white_24dp"
                                android:layout_width="0dp"
                                android:layout_height="match_parent" />

                        </LinearLayout>


                        <LinearLayout
                            android:visibility="gone"
                            android:id="@+id/ll_aproved_reject_add_user"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:textStyle="bold"
                                android:padding="10dp"
                                android:textColor="@color/colorPrimaryDark"
                                android:text="@string/assign_user"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_margin="5dp"
                                android:background="@color/grey"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <Spinner
                                    android:id="@+id/sp_approve_reject_task_assign_user"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp">

                                </Spinner>

                                <TextView
                                    android:visibility="gone"
                                    android:id="@+id/tv_sp_approve_reject_task_assign_user"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                            <TextView
                                android:textStyle="bold"
                                android:padding="10dp"
                                android:textColor="@color/colorPrimaryDark"
                                android:text="@string/alternate_user"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_margin="5dp"
                                android:background="@color/grey"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <Spinner
                                    android:id="@+id/sp_approve_reject_task_alternative_user"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp">

                                </Spinner>

                                <TextView
                                    android:visibility="gone"
                                    android:id="@+id/tv_sp_approve_reject_task_alternative_user"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />


                            </LinearLayout>
                            <TextView
                                android:textStyle="bold"
                                android:layout_marginTop="10dp"
                                android:padding="10dp"
                                android:textColor="@color/colorPrimaryDark"
                                android:text="@string/select_supervisor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <LinearLayout
                                android:layout_margin="5dp"
                                android:background="@color/grey"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <Spinner
                                    android:id="@+id/sp_approve_reject_task_select_supervisior"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp">

                                </Spinner>
                                <TextView
                                    android:visibility="gone"
                                    android:id="@+id/tv_sp_approve_reject_task_select_supervisior"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_margin="5dp"
                                android:padding="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:textStyle="bold"
                                    android:layout_gravity="center"
                                    android:gravity="center"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:text="@string/deadline"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <LinearLayout
                                    android:layout_gravity="right"
                                    android:gravity="right"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">

                                    <RadioGroup
                                        android:id="@+id/rg_deadline"
                                        android:orientation="horizontal"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">

                                        <RadioButton
                                            android:id="@+id/rb_approve_reject_date"
                                            android:text="@string/date"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" />
                                        <RadioButton
                                            android:id="@+id/rb_approve_reject_days"
                                            android:text="@string/days"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" />

                                        <RadioButton
                                            android:id="@+id/rb_approve_reject_hours"
                                            android:text="@string/hours"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content" />

                                    </RadioGroup>

                                </LinearLayout>


                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/ll_et_hrs_days"
                                android:gravity="center"
                                android:layout_gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <EditText
                                    android:textSize="13sp"
                                    android:visibility="gone"
                                    android:hint="@string/enter_hours"
                                    android:padding="10dp"
                                    android:inputType="number"
                                    android:background="@drawable/bg_take_pic"
                                    android:id="@+id/et_approve_reject_task_deadline_hrs"
                                    android:layout_margin="10dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                                <EditText
                                    android:inputType="number"
                                    android:textSize="13sp"
                                    android:visibility="gone"
                                    android:hint="@string/enter_days"
                                    android:padding="10dp"
                                    android:background="@drawable/bg_take_pic"
                                    android:id="@+id/et_approve_reject_task_deadline_days"
                                    android:layout_margin="10dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                            <LinearLayout
                                android:visibility="gone"
                                android:id="@+id/ll_aproved_reject_date_between"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="10dp"
                                android:layout_marginBottom="10dp"
                                android:weightSum="1">

                                <LinearLayout
                                    android:focusable="true"
                                    android:focusableInTouchMode="true"
                                    android:layout_width="0px"
                                    android:layout_height="0px"/>

                                <EditText
                                    android:id="@+id/et_approve_reject_task_deadline_start"
                                    android:hint="@string/start_datetime"
                                    android:textSize="13sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.45"
                                    android:background="@drawable/shape_rect_3"
                                    android:drawableEnd="@drawable/calender"
                                    
                                    android:padding="7dp" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:layout_weight="0.10"
                                    android:background="@color/colorPrimary"
                                    android:gravity="center"
                                    android:text="@string/To"
                                    android:textColor="@color/white"
                                    android:textStyle="bold" />

                                <LinearLayout
                                    android:focusable="true"
                                    android:focusableInTouchMode="true"
                                    android:layout_width="0px"
                                    android:layout_height="0px"/>

                                <EditText
                                    android:id="@+id/et_approve_reject_task_deadline_end"
                                    android:hint="@string/end_datetime"
                                    android:textSize="13sp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.45"
                                    android:background="@drawable/shape_rect_3"
                                    android:drawableEnd="@drawable/calender"
                                    
                                    android:padding="7dp" />


                            </LinearLayout>



                        </LinearLayout>


                    </LinearLayout>


                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    app:cardCornerRadius="8dp"
                    android:visibility="gone"
                    android:id="@+id/cv_approve_reject_task_adduser_dynamic"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <LinearLayout
                        android:padding="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_marginBottom="20dp"
                            android:visibility="visible"
                            android:id="@+id/ll_aproved_reject_add_user_dynamic"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">




                            <LinearLayout
                                android:layout_marginTop="10dp"
                                android:layout_marginBottom="5dp"
                                android:padding="5dp"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <RelativeLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content">


                                    <TextView
                                        android:textStyle="bold"
                                        android:textColor="@color/colorPrimaryDark"
                                        android:text="@string/order"
                                        android:padding="10dp"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />

                                    <TextView
                                        android:layout_marginRight="30dp"
                                        android:layout_alignParentRight="true"
                                        android:id="@+id/tv_approve_reject_task_order"
                                        android:layout_width="40dp"
                                        android:layout_height="wrap_content"
                                        android:background="@drawable/shape_circle"
                                        android:gravity="center"
                                        android:padding="10dp"
                                        android:text="2"
                                        android:textColor="@color/white"
                                        android:textStyle="bold" />


                                </RelativeLayout>



                            </LinearLayout>

                            <TextView
                                android:textStyle="bold"
                                android:padding="10dp"
                                android:textColor="@color/colorPrimaryDark"
                                android:text="@string/assign_user"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />

                            <LinearLayout
                                android:layout_margin="5dp"
                                android:background="@color/grey"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <Spinner
                                    android:id="@+id/sp_approve_reject_task_assign_user_dynamic"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp">



                                </Spinner>

                              <!--  for the userid -->

                                <TextView
                                    android:id="@+id/tv_sp_approve_reject_task_assign_user_dynamic"
                                    android:visibility="gone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                            <TextView
                                android:textStyle="bold"
                                android:padding="10dp"
                                android:textColor="@color/colorPrimaryDark"
                                android:text="@string/alternate_user"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_margin="5dp"
                                android:background="@color/grey"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <Spinner
                                    android:id="@+id/sp_approve_reject_task_alternative_user_dynamic"
                                    android:layout_width="match_parent"
                                    android:layout_height="40dp">

                                </Spinner>
                                <!--  for the userid -->

                                <TextView
                                    android:id="@+id/tv_sp_approve_reject_task_alternative_user_dynamic"
                                    android:visibility="gone"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>
                            <TextView
                                android:textStyle="bold"
                                android:layout_marginTop="10dp"
                                android:padding="10dp"
                                android:textColor="@color/colorPrimaryDark"
                                android:text="@string/select_supervisor"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content" />
                            <LinearLayout
                                android:layout_margin="5dp"
                                android:background="@color/grey"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <Spinner
                                    android:id="@+id/sp_approve_reject_task_select_supervisior_dynamic"
                                    android:layout_width="match_parent"
