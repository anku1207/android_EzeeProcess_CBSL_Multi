<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="8dp"
    app:cardUseCompatPadding="true">

    <androidx.core.widget.NestedScrollView
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_alert_group_manager_heading"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                android:gravity="center"
                android:padding="10dp"
                android:textColor="@color/white"
                android:textSize="15sp"
                android:textStyle="bold" />



            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:padding="5dp"
                    android:text="Group Name"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/et_alert_group_manager_group_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:background="@drawable/shape_rect_3"
                    android:padding="5dp"
                    android:text="hey"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/tv_alert_group_manager_users_in_grp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="7dp"
                    android:padding="5dp"
                    android:text="Users in group : Software"
                    android:textColor="@color/colorPrimary"
                    android:textStyle="bold" />


               <!-- <com.example.ankitroy.ezeefile.Chip.UsernameCompletionView
                    android:id="@+id/autocomplete_textview_group_manager"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/shape_rect_3"
                    android:focusableInTouchMode="true"
                    android:imeOptions="actionDone"
                    android:inputType="text|textNoSuggestions|textMultiLine"
                    android:nextFocusDown="@+id/editText"
                    android:padding="5dp"
                    android:layout_margin="7dp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14sp" />-->


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:gravity="right"
                    android:padding="7dp">

                    <Button
                        android:id="@+id/btn_group_manager_modify_alert_close"
                        android:layout_width="80dp"
                        android:layout_height="35dp"
                        android:background="@color/light_red"
                        android:text="close"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                    <Button
                        android:id="@+id/btn_group_manager_modify_alert_save"
                        android:layout_width="80dp"
                        android:layout_height="35dp"
                        android:layout_marginLeft="5dp"
                        android:background="@color/colorPrimaryDark"
                        android:text="save"
                        android:textColor="@color/white"
                        android:textSize="12sp" />

                </LinearLayout>


            </LinearLayout>






        </LinearLayout>

    </androidx.core.widget.NestedScrollView>




</androidx.cardview.widget.CardView>