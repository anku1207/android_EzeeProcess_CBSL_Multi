<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <!--Addmore CashvOucher-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:background="@color/transparent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">


            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_weight="0.80"
                android:padding="5dp"
                android:text="@string/description"
                android:textColor="@color/colorPrimaryDark"
                android:textStyle="bold" />

            <ImageButton
                android:visibility="gone"
                android:id="@+id/ib_intiateworkflow_remove"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.20"
                android:background="@color/transparent"
                android:tooltipText="Remove"
                app:srcCompat="@drawable/ic_minus_blue_24dp" />


            <ImageButton
                android:id="@+id/ib_intiateworkflow_add"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="0.20"
                android:background="@color/transparent"
                android:tooltipText="Add More"
                app:srcCompat="@drawable/ic_add_box_blue_24dp" />


        </LinearLayout>


        <EditText

            android:id="@+id/et_intiateworkflow_desc_dynamic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/shape_rect_5"
            android:padding="10dp"
            android:textSize="13sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:padding="5dp"
            android:text="@string/rupees"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/et_intiateworkflow_rupee_dynamic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@drawable/shape_rect_5"
            android:hint="@string/rupees"
            android:inputType="number"
            android:maxLength="9"
            android:padding="10dp"
            android:textSize="13sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:padding="5dp"
            android:text="@string/paisa"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_add_more_counter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:padding="5dp"
            android:text="Paisa"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:visibility="gone" />

        <EditText
            android:id="@+id/et_intiateworkflow_paisa_dynamic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:background="@drawable/shape_rect_5"
            android:hint="@string/paisa"
            android:inputType="number"
            android:maxLength="9"
            android:padding="10dp"
            android:textSize="13sp" />


    </LinearLayout>


</androidx.cardview.widget.CardView>