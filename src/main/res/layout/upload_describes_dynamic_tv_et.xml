<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:textColor="@color/colorPrimary"
            android:id="@+id/tv_upload_describe_metaname"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_margin="5dp"
            android:text="Aadhar number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_upload_describes_mandatory"
            android:textColor="@color/red"
            android:text="*"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

<RelativeLayout
    android:layout_margin="2dp"
    android:background="@color/grey"
    android:weightSum="1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <EditText
        android:layout_marginBottom="5dp"
        android:textSize="13dp"
        android:id="@+id/et_upload_describe"
        android:cursorVisible="true"
        android:padding="10dp"
        android:layout_margin="5dp"
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:visibility="gone"
        android:layout_alignEnd="@+id/et_upload_describe"
        android:background="@color/grey"
        android:id="@+id/date_picker_describe"
        android:padding="10dp"
        android:src="@drawable/ic_date_range_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         />

</RelativeLayout>

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_upload_describe_datatype"
        android:textColor="@color/red"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>