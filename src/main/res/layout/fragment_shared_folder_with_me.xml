<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".ui.fragments.sharefolder.SharedFolderWithMeFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/rv_shared_folder_with_me"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


    <TextView
        android:visibility="gone"
        android:drawablePadding="10dp"
        android:drawableTint="@color/colorPrimary"
        android:drawableTop="@drawable/ic_folder_48dp"
        android:textStyle="bold"
        android:text="@string/no_shared_folder_found"
        android:id="@+id/tv_no_shared_folder_found_with_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <ProgressBar
        android:id="@+id/pb_share_folder_main_with_me"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"/>

</LinearLayout>