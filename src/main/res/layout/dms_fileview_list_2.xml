<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv_search_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="0dp"
    app:cardElevation="1dp"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/white"
    app:cardUseCompatPadding="true">

    <!--  <View
          android:layout_width="match_parent"
          android:layout_height="3dp"
          android:background="@color/colorPrimary" />-->

    <LinearLayout
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="3dp"
            android:weightSum="1"
            android:baselineAligned="false">




            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:gravity="center">



                <ImageView
                    android:src="@drawable/file"
                    android:id="@+id/iv_filetype"
                    android:layout_width="60dp"
                    android:layout_height="48dp"
                    android:contentDescription="TODO" />


            </LinearLayout>

            <LinearLayout
                android:weightSum="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.8"
                android:orientation="vertical">

                <LinearLayout
                    android:weightSum="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_weight="0.88"
                        android:layout_marginTop="5dp"
                        android:id="@+id/tv_dms_list_filename"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:padding="3dp"
                        android:text="Gradle.bat"
                        android:textColor="@color/black"
                        android:textSize="14dp"
                        android:textStyle="bold" />
                    <CheckBox
                        android:visibility="invisible"
                        android:id="@+id/checkbox_dms_list"
                        android:layout_weight="0.12"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />


                </LinearLayout>



                <!--   <TextView
                       android:padding="3dp"
                       android:textSize="13sp"
                       android:text="Ankit.txt"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content" />-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:padding="3dp"
                        android:text="@string/file_size"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:padding="3dp"
                        android:text="@string/no_of_pages"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/tv_dms_list_filesize"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:padding="3dp"
                        android:text="24kb"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <TextView

                        android:id="@+id/tv_dms_list_NoOfPages"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:padding="3dp"
                        android:text="3"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:padding="3dp"
                        android:text="@string/uploaded_by"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:padding="3dp"
                        android:text="@string/uploaded_date"
                        android:textSize="13sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/tv_dms_list_uploadedby"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:padding="3dp"
                        android:text="Ankit"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_dms_list_uploadedDate"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:padding="3dp"
                        android:text="24-01-1996 23:00:00"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_dms_list_ischecked"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:visibility="gone"
                    android:weightSum="1">

                    <TextView
                        android:id="@+id/tv_dms_list_filepath"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:padding="3dp"
                        android:textColor="@color/black" />
                    <TextView
                        android:id="@+id/tv_dms_list_checkinstatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:padding="3dp"
                        android:textColor="@color/black" />
                    <TextView
                        android:id="@+id/tv_dms_list_versionstatus"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:padding="3dp"
                        android:textColor="@color/black" />


                    <TextView
                        android:id="@+id/tv_dms_list_filetype"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:padding="3dp"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_dms_list_docname"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:padding="3dp"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_dms_list_metadata"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:padding="3dp"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                    <TextView
                        android:id="@+id/tv_dms_list_docid"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.5"
                        android:padding="3dp"
                        android:textColor="@color/black"
                        android:textSize="13sp" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:orientation="vertical"
            android:padding="1dp">

            <View
                android:layout_width="350dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:background="@color/dark_grey" />

            <LinearLayout
                android:id="@+id/ll_dms_fileview_options"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="6dp">

                <ImageView
                    android:visibility="gone"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/version"
                    android:id="@+id/iv_version"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:contentDescription="TODO" />

                <ProgressBar
                    android:visibility="gone"
                    android:id="@+id/progressbar_version"
                    android:layout_width="24dp"
                    android:layout_height="24dp" />

                <LinearLayout
                    android:gravity="right"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:foreground="?attr/selectableItemBackground"
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:id="@+id/iv_checkin"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/checkin"
                        android:contentDescription="TODO" />
                    <ImageView
                        android:foreground="?attr/selectableItemBackground"
                        android:layout_gravity="center"
                        android:visibility="visible"
                        android:id="@+id/iv_checkout"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/checkout"
                        android:contentDescription="TODO" />

                    <ImageView
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:id="@+id/iv_copy_file"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/copy"
                        android:contentDescription="TODO" />
                    <ImageView
                        android:layout_gravity="center"
                        android:visibility="gone"
                        android:id="@+id/iv_move_file"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/move"
                        android:contentDescription="TODO" />

                    <ImageView
                        android:foreground="?attr/selectableItemBackground"
                        android:layout_gravity="center"
                        android:id="@+id/iv_open_file"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginRight="10dp"
                        android:src="@drawable/fileview"
                        android:contentDescription="TODO" />

                    <ImageView
                        android:id="@+id/iv_show_metadata"
                        android:layout_width="25dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="10dp"
                        android:contentDescription="TODO"
                        android:foreground="?attr/selectableItemBackground"
                        android:src="@drawable/ic_remove_red_eye_blue_24dp" />

                    <ImageView
                        android:foreground="?attr/selectableItemBackground"
                        android:layout_gravity="center"
                        android:id="@+id/iv_delete"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginRight="10dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_delete_black_24dp"
                        android:contentDescription="TODO" />

                    <ImageView
                        android:foreground="?attr/selectableItemBackground"
                        android:layout_gravity="center"
                        android:visibility="visible"
                        android:id="@+id/iv_share"
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginRight="10dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_share_grey_24dp"
                        android:contentDescription="TODO" />

                </LinearLayout>




            </LinearLayout>

        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>