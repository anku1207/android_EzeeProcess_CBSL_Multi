<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/cv_bottom_sheet_workflow_doclist_item"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/iv_bottom_sheet_workflow_doc_filetype"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_margin="5dp"
            android:src="@drawable/pdf" />

        <TextView
            android:padding="5dp"
            android:id="@+id/tv_bottom_sheet_workflow_doc_filename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:gravity="fill_vertical"
            android:text="Doc name" />

        <TextView
            android:id="@+id/tv_bottom_sheet_workflow_doc_fileextension"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:gravity="fill_vertical"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_bottom_sheet_workflow_doc_filepath"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:gravity="fill_vertical"
            android:visibility="gone" />


        <TextView
            android:id="@+id/tv_bottom_sheet_workflow_doc_docid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:gravity="fill_vertical"
            android:visibility="gone" />

    </LinearLayout>

</androidx.cardview.widget.CardView>