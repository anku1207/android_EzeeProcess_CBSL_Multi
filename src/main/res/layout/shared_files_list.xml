<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="7dp"
        app:cardUseCompatPadding="true">

        <!--  <View
              android:layout_width="match_parent"
              android:layout_height="3dp"
              android:background="@color/colorPrimary" />-->

        <LinearLayout
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="3dp"
                android:weightSum="1"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.2"
                    android:gravity="center">

                    <ImageView
                        android:src="@drawable/file"
                        android:id="@+id/iv_sharedfiles_filetype"
                        android:layout_width="60dp"
                        android:layout_height="48dp"
                        android:contentDescription="TODO" />


                </LinearLayout>


                <LinearLayout
                    android:weightSum="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.8"
                    android:orientation="vertical">

                    <LinearLayout
                        android:weightSum="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_weight="0.88"
                            android:layout_marginTop="5dp"
                            android:id="@+id/tv_shared_file_list_filename"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:padding="3dp"
                            android:text="Gradle.bat"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textColor="@color/black"
                            android:textSize="14dp"
                            android:textStyle="bold" />
                        <CheckBox
                            android:visibility="invisible"
                            android:id="@+id/checkbox_dms_list"
                            android:layout_weight="0.12"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" />


                    </LinearLayout>



                    <!--   <TextView
                           android:padding="3dp"
                           android:textSize="13sp"
                           android:text="Ankit.txt"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content" />-->

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:padding="3dp"
                            android:text="@string/storage_name"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:padding="3dp"
                            android:text="@string/no_of_pages"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/tv_shared_files_list_Storagename"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:padding="3dp"
                            android:text="User manual Documents"
                            android:textColor="@color/black"
                            android:textSize="13sp" />

                        <TextView

                            android:id="@+id/tv_shared_files_list_NoOfPages"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:padding="3dp"
                            android:text="3"
                            android:textColor="@color/black"
                            android:textSize="13sp" />

                    </LinearLayout>

                    <LinearLayout

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:padding="3dp"
                            android:text="@string/shared_to"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                        <TextView

                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:padding="3dp"
                            android:text="@string/shared_date"
                            android:textSize="13sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/tv_shared_files_list_sharedto"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:padding="3dp"
                            android:text="Ankit"
                            android:textColor="@color/black"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_shared_file_list_sharedDate"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:padding="3dp"
                            android:text="24-01-1996 23:00:00"
                            android:textColor="@color/black"
                            android:textSize="13sp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:weightSum="1">

                        <TextView
                            android:id="@+id/tv_shared_file_list_filepath"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:padding="3dp"
                            android:textColor="@color/black" />

                        <TextView
                            android:id="@+id/tv_shared_file_list_docid"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:padding="3dp"
                            android:textColor="@color/black"
                            android:textSize="13sp" />


                        <TextView
                            android:id="@+id/tv_shared_file_list_fileExtension"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:padding="3dp"
                            android:textColor="@color/black"
                            android:textSize="13sp" />

                        <TextView
                            android:id="@+id/tv_shared_file_list_touserid"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.5"
                            android:padding="3dp"
                            android:textColor="@color/black"
                            android:textSize="13sp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="8"
                android:orientation="vertical"
                android:padding="1dp">

                <View
                    android:layout_width="350dp"
                    android:layout_height="1dp"
                    android:layout_gravity="center"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/dark_grey" />

                <LinearLayout
                    android:id="@+id/ll_dms_fileview_options"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:orientation="horizontal"
                    android:padding="6dp">

                 <Button
                     android:id="@+id/btn_shared_files_list_undoshare"
                     android:padding="7dp"
                     android:drawableLeft="@drawable/ic_undo_white_24dp"
                     android:textColor="@color/white"
                     android:textSize="12sp"
                     android:text="@string/undo_share"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>